extends layout

block content
	script(type="text/html", id="listTemplate")
		tr
			td
				a(data-bind="attr: { href: '/list/' + _id, title: title }")
					span(data-bind="text: title") 
			td
				button(class='btn btn-mini',type='button', data-bind='click: $parent.removeList , visible:$parent.edit')
					i(class="icon-remove")


	h1 Lists
	h4 These are the lists that matters, or not

	table(class='table table-striped')
				thead

				tbody(data-bind="template: { name: 'listTemplate', foreach: lists}")

	br
	hr
	form(class='form')
		input(ID='title', data-bind='value: title',placeholder="New list", class='input-medium')
		button(data-bind='click: function(){addListWasClicked()}', class='btn') Add

	hr
	form(class='form')
		input(ID='join', data-bind='value: listToJoin',placeholder="Join list id", class='input-medium')
		button(data-bind='click: joinList', class='btn') Join

	br
	input(type='checkbox',data-bind='checked:edit') Deletable

	script(src='knockout/knockout-2.2.1.debug.js', type='text/javascript')
	script(src='js/lists.js', type='text/javascript')
